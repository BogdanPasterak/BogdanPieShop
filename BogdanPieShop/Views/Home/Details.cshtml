@model BogdanPieShop.Models.Pie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div>
    <div class="img-container row">
        <figure class="figure">
            <img class="img-fluid figure-img" src="@Html.DisplayFor(model => model.ImageUrl)" alt="Image" />
            <figcaption class="figure-caption text-center"><h3>@Model.ShortDescription</h3></figcaption>
        </figure>
        <h1 class="img-title rounded">@Model.Id: @Html.DisplayFor(model => model.Name)</h1>
    </div>
    <div class="row">
        <h4 class="text-justify text-info">
            @Model.LongDescription
        </h4>
    </div>
    <dl class="row">
        <h3 class="col-sm-2 text-secondary">
            @Html.DisplayNameFor(model => model.Price)
        </h3>
        <h3 class="col-sm-10 text-primary text-left">
            @Model.Price.ToString("C")
        </h3>
        @if (@Model.IsPieOfWeek)
        {
            <h3 class="col-12 text-danger">Pie Of The Week! </h3>
        }
    </dl>
</div>
